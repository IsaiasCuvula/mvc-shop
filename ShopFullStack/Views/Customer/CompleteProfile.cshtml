@model Customer

@{
    ViewData["Title"] = "Complete Your Profile";
}

<div class="d-flex justify-content-center">
    <div class="col-md-6">
        <form id="completeProfileForm" asp-action="CompleteProfile" method="post">
            <div class="text-center">
                <h2>Complete Your Profile</h2>
                <p>Welcome! Please fill in the additional details to complete your account setup.</p>
            </div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
           
            <!-- Full Name -->
            <div class="form-group mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" type="text" id="Name" name="Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <!-- ID Card Number -->
            <div class="form-group mb-2">
                <label asp-for="IdCardNumber">Id card number</label>
                <input asp-for="IdCardNumber" class="form-control" type="number" id="IdCardNumber" name="IdCardNumber"/>
                <span asp-validation-for="IdCardNumber" class="text-danger"></span>
            </div>

            <!-- City -->
            <div class="form-group mb-2">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" type="text" id="City" name="City"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="form-group mb-2">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" type="text" id="Address" name="Address"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="form-group mb-2">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" type="tel" id="Phone" name="Phone"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
      
            <input type="hidden" asp-for="Email" id="Email" name="Email" value="@ViewData["Email"]" />
            <input type="hidden" asp-for="AppUserId" id="AppUserId" name="AppUserId" value="@ViewData["AppUserId"]" />

            <div class="mt-5">
                <button id="completeProfileSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Save Profile</button>
            </div>
        </form>
    </div>
</div>
